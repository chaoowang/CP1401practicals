BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id:input_number
            multiline: False
            on_text: app.convert(input_number.text)
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.miles_increase(input_number.text)
            Button:
                text: "Down"
                on_press: app.miles_decrease(input_number.text)
    Label:
        text:"Convert miles to km"
    Label:
        text: app.result_km